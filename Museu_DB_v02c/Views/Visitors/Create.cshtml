@using ChartJSCore.Models
@model Museu_DB_v02c.Models.Visitor


@{
    ViewData["Title"] = "Create";
}

<H1> Welcome to Our Museum</H1>
<h2>Let us know you better</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <label asp-for="Nationality" class="control-label"></label>
            <table class="form-group" data-bind="Nationality">

                <tr>
                    <td style="padding-right:10px" id="Nationality_cell_0">
                        <img src="@Url.Content("~/images/" + @ViewBag.NationalityStringList[0] + ".png")" alt=@ViewBag.NationalityStringList[0] />
                    </td>
                    <td style="padding-right:10px" id="Nationality_cell_1">
                        <img src="@Url.Content("~/images/"+@ViewBag.NationalityStringList[1]+".png")" alt=@ViewBag.NationalityStringList[1] />
                    </td>
                    <td style="padding-right:10px" id="Nationality_cell_2">
                        <img src="@Url.Content("~/images/"+@ViewBag.NationalityStringList[2]+".png")" alt=@ViewBag.NationalityStringList[2] />
                    </td>
                    <td style="padding-right:10px" id="Nationality_cell_3">
                        <img src="@Url.Content("~/images/"+@ViewBag.NationalityStringList[3]+".png")" alt=@ViewBag.NationalityStringList[3] />
                    </td>
                </tr>
                <tr>
                    <td style="padding-top:10px">
                </tr>
                <tr>
                    <td id="Nationality_cell_4">
                        <img src="@Url.Content("~/images/"+@ViewBag.NationalityStringList[4]+".png")" alt=@ViewBag.NationalityStringList[4] />
                    </td>
                    <td id="Nationality_cell_5">
                        <img src="@Url.Content("~/images/"+@ViewBag.NationalityStringList[5]+".png")" alt=@ViewBag.NationalityStringList[5] />
                    </td>
                    <td id="Nationality_cell_6">
                        <img src="@Url.Content("~/images/"+@ViewBag.NationalityStringList[6]+".png")" alt=@ViewBag.NationalityStringList[6] />
                    </td>
                    <td id="Nationality_cell_7">
                        <img src="@Url.Content("~/images/"+@ViewBag.NationalityStringList[7]+".png")" alt=@ViewBag.NationalityStringList[7] />
                    </td>
                </tr>
                <input id=nationalityInput name="Nationality" type="hidden" value="" />
            </table>
            @*<div class="form-group">
                    <label asp-for="Age_Group" class="control-label"></label>
                    <input asp-for="Age_Group" class="form-control" />
                    <span asp-validation-for="Age_Group" class="text-danger"></span>
                </div>*@
            <div>

                <label asp-for="Gender" class="control-label"></label>
                <table class="form-group" data-bind="Gender">

                    <tr>
                        <td style="padding-right:10px" id="Gender_cell_0">
                            <img src="@Url.Content("~/images/Male.jpg")" alt="Male" />
                        </td>

                        <td style="padding-right:10px" id="Gender_cell_1">
                            <img src="@Url.Content("~/images/Female.png")" alt="Female" />
                        </td>

                    </tr>
                    <input id=genderInput name="Gender" type="hidden" value="" />
                </table>
            </div>

            <div>

                <label asp-for="Age_Group" class="control-label"></label>
                <table class="form-group" data-bind="Age_Group">

                    <tr>
                        <td align="center" valign="middle" id="Age_cell_0">
                            <img src="@Url.Content("~/images/Ageevolution0.png")" alt="0 to 2" />
                            <p>0 to 2</p>
                        </td>
                        <td align="center" valign="middle" id="Age_cell_1">
                            <img src="@Url.Content("~/images/Ageevolution1.png")" alt="3 to 12" />
                            <p>3 to 12</p>
                        </td>
                        <td align="center" valign="middle" id="Age_cell_2">
                            <img src="@Url.Content("~/images/Ageevolution2.png")" alt="13 to 18" />
                            <p>13 to 18</p>
                        </td>
                        <td align="center" valign="middle" id="Age_cell_3">
                            <img src="@Url.Content("~/images/Ageevolution3.png")" alt="19 to 30" />
                            <p>19 to 30</p>
                        </td>
                        <td align="center" valign="middle" id="Age_cell_4">
                            <img src="@Url.Content("~/images/Ageevolution4.png")" alt="31 to 45" />
                            <p>31 to 45</p>
                        </td>
                        <td align="center" valign="middle" id="Age_cell_5">
                            <img src="@Url.Content("~/images/Ageevolution5.png")" alt="46 to 64" />
                            <p>46 to 64</p>
                        </td>
                        <td align="center" valign="middle" id="Age_cell_6">
                            <img src="@Url.Content("~/images/Ageevolution6.png")" alt="65 to 99" />
                            <p>65 to 99</p>
                        </td>

                    </tr>
                    <input id=Age_GroupInput name="Age_Group" type="hidden" value="" />
                </table>
            </div>


            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" id="submit_create_button" />
                
            </div>
        </form>
    </div>
</div>



@*<div>
    <a asp-action="Index">Back to List</a>
</div>*@

